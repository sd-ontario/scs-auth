                <div class="container blog glyphicon glyphicon-messages">
                  <div id="community-image">
                    <img id='tab-img' src="../images/comingsoon.jpg">
                  </div>
                </div>
              </div>
              <div class="bhoechie-tab-content">
                <div class="container blog glyphicon glyphicon-people">
                  <div id="community-image">
                    <img id='tab-img' src="../images/comingsoon.jpg">
                  </div>
                </div>
              </div>
              <div class="bhoechie-tab-content">
                <div class="container blog glyphicon glyphicon-profile">
                  <div id="community-image">
